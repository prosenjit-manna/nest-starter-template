{
  "name": "nest-starter-backend",
  "version": "0.0.1",
  "description": "",
  "author": "Prosenjit Manna",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "nest": "nest",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma": "prisma",
    "tsx": "tsx",
    "db:seed": "npm run tsx src/seed/index.ts",
    "db:push": "npm run prisma -- db push",
    "prisma:generate": "npm run prisma -- generate",
    "prepare": "husky"
  },
  "dependencies": {
    "@apollo/server": "4.11.2",
    "@nestjs/apollo": "12.2.1",
    "@nestjs/common": "10.4.12",
    "@nestjs/config": "3.3.0",
    "@nestjs/core": "10.4.12",
    "@nestjs/graphql": "12.2.1",
    "@nestjs/jwt": "10.2.0",
    "@nestjs/platform-express": "10.4.12",
    "@nestjs/serve-static": "4.0.2",
    "@prisma/client": "6.0.0",
    "@sentry/nestjs": "8.41.0",
    "@sentry/profiling-node": "8.41.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "date-fns": "^4.1.0",
    "envalid": "^8.0.0",
    "graphql": "^16.9.0",
    "hbs": "^4.2.0",
    "lodash": "^4.17.21",
    "nestjs-rate-limiter": "^3.1.0",
    "nodemailer": "6.9.16",
    "reflect-metadata": "0.2.2",
    "rxjs": "^7.8.1",
    "sanitize-html": "^2.13.1"
  },
  "devDependencies": {
    "@faker-js/faker": "9.2.0",
    "@nestjs/cli": "^10.4.8",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.12",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "5.0.0",
    "@types/hbs": "^4.0.4",
    "@types/jest": "29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/lodash": "4.17.13",
    "@types/multer": "^1.4.12",
    "@types/node": "22.10.1",
    "@types/nodemailer": "6.4.17",
    "@types/sanitize-html": "^2.13.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "3.4.1",
    "prisma": "6.0.0",
    "source-map-support": "^0.5.21",
    "ts-jest": "29.2.5",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "4.19.2",
    "typescript": "5.7.2"
  },
  "lint-staged": {
    "src/**/*.ts": "eslint src/**/*.ts --max-warnings=0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "packageManager": "yarn@4.5.1"
}
