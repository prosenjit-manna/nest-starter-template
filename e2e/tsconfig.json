{
  "compilerOptions": {
    "baseUrl": "./src", 
    "target": "ES2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./*"]
    },
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
